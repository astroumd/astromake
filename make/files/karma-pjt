FTP=ftp://ftp.astro.umd.edu/pub/astro/
VERSION=1.6.33p
FILE=karma-$(VERSION).tgz
SIZE=16.8Mb

URL=$(FTP)/$(FILE)

ROOT=$(ASTROMAKE)/opt
NAME=karma

help:
	@echo $(NAME) $(VERSION) $(SIZE)

url:
	@echo http://www.atnf.csiro.au/karma/

all:	get install clean

get:
	wwwget $(URL)


install:
	tar -C $(ROOT) -zxf $(FILE)
	echo $(VERSION) > $(ASTROMAKE)/status/$(NAME)

clean:
	rm -f $(FILE)

remove:
	rm -rf $(ROOT)/karma
	rm -f $(ASTROMAKE)/status/$(NAME)
