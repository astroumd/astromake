FTP=ftp://linux.nrao.edu/pub/linux/packages/RPMS/i386/Glibc
VERSION=1.20
FILE=saoimage-$(VERSION)-1u.i386.rpm
RPM=saoimage-$(VERSION)-1u
SIZE=0.5Mb

URL=$(FTP)/$(FILE)

NAME=saoimage

help:
	@echo $(NAME) $(VERSION) $(SIZE)

url:
	@echo http://tdc-www.harvard.edu/software/saoimage.html

all:	get install clean

get:
	wwwget $(URL)

install:
	rpm -i $(FILE)
	echo $(VERSION) > /usr/local/astro/status/$(NAME)

clean:
	rm -f $(FILE)

remove:
	rpm -e $(RPM)
	rm -f /usr/local/astro/status/$(NAME)
